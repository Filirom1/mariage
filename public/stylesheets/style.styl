gray_dark = rgb(86, 90, 92)
gray_light = rgb(130, 136, 138)
gray_background =  rgb(247, 247, 247)

@font-face 
  font-family: 'HandWritten'
  src: url('/fonts/HandWritten.woff') format('woff'), url('HandWritten.ttf') format('truetype')

*
  box-sizing border-box
  -moz-box-sizing border-box
  -webkit-box-sizing border-box
  color gray_dark
  font-family 'Helvetica'

#main
  margin: 0 auto; 

h1 a
  color gray_dark
  font-size: 60px;
  font-weight: normal;
  font-family 'HandWritten', sans-serif;

h4 {
    font-weight: normal;
    font-style: italic;
}

.left, .right, .col
  display inline-block
  vertical-align text-top

.left, .right
  width 100%

.right
  width 100%
  height 100px
  padding-left 5px

.col
  color gray_light
  width 50%
  height  370px
  margin-bottom: 10px

  -webkit-filter grayscale(0%)
  -webkit-transition .5s ease-in-out
  -moz-filter grayscale(0%)
  -moz-transition .5s ease-in-out
  -o-filter grayscale(0%)
  -o-transition .5s ease-in-out
  filter grayscale(0%)
  transition .5s ease-in-out

  position  relative
  perspective  800px

  .card
    width  100%
    height  100%
    position absolute
    transform-style  preserve-3d
    transition  transform 1s

  .side-a, .side-b
    padding 0 5px 10px 5px
    display  block
    position  absolute
    width  100%
    height  100%
    backface-visibility  hidden
    -webkit-backface-visibility: hidden;

  .card.flipped
    transform  rotateY( 180deg )

  .side-b
    transform  rotateY( 180deg )
    background  gray_background
    cursor pointer
    overflow-y: auto;

  img
    max-width 100%
    height auto
    cursor pointer

.col.grayscale
  -webkit-filter grayscale(100%)
  -webkit-transition .5s ease-in-out
  -moz-filter grayscale(100%) 
  -moz-transition .5s ease-in-out
  -o-filter grayscale(100%) 
  -o-transition .5s ease-in-out
  filter grayscale(100%) 
  transition .5s ease-in-out

.name
  font-size 16px
  line-height 17.6px
  color gray_dark
  padding 3px 0
  font-weight bold

.booking
  height 40px

#map
  width 100%
  height 630px
  max_height 100%

#directions
  background  gray_background

.desc
  margin: auto;
  width: 300px;
  text-align: center;

.nous
  max-width: 300px
  display block
  margin: auto

.index, .info
  border-top: dashed 2px
  background:url(/images/robe-droite.png) no-repeat right top, 
  url(/images/costume-gauche.png) no-repeat left top;

.info
  text-align: center
  height: 500px

@media screen and (min-width : 1080px) 
  #main
    max-width: 680px;
    
  .col
    height: 300px;


